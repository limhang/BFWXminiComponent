<template name="Toast">
    <view class="bf-toast {{ animateCss }} {{ className }}" hidden="{{ !visible }}">
        <view class="bf-toast-container">
            <icon wx:if="{{ type }}" type="{{ type }}" size="55" color="{{ color }}" class="bf-toast-container-icon" />
            <view class="wux-toast-container-text">{{ text }}</view>
        </view>
    </view>
</template>